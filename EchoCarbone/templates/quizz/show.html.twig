{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <h1>Quizz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quizz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quizz.title }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ quizz.source }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ quizz.url }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ quizz.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ quizz.description }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ quizz.updateDate ? quizz.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ quizz.creationDate ? quizz.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ quizz.question }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ quizz.answer }}</td>
            </tr>
            <tr>
                <th>NbLike</th>
                <td>{{ quizz.nbLike }}</td>
            </tr>
            <tr>
                <th>NbDislike</th>
                <td>{{ quizz.nbDislike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quizz_index') }}">back to list</a>

    <a href="{{ path('quizz_edit', {'id': quizz.id}) }}">edit</a>

    {{ include('quizz/_delete_form.html.twig') }}
{% endblock %}
