{% extends 'base.html.twig' %}

{% block title %}Eco-Lexique
{% endblock %}
{% block body %}

	<div class="container bodycontent mb-5 px-5">
		<nav aria-label="breadcrumb row" class="my-3 ">
			<ol class="breadcrumb col-12 col-md-10 offset-md-2">
				<li class="breadcrumb-item active" aria-current="page">Eco-lexique</li>
			</ol>
		</nav>


		<div class="row mb-4">

			<div class="offset-2 col-10">

				{% for glossary in glossaries %}

					<p>{{ glossary.word }}</p>
					<p>{{ glossary.definition }}</p>
					<p>{{ glossary.source }}</p>
					<p>{{ glossary.url }}</p>
					<p>
						{% for category in glossary.category %}
							{{category.label}}
						{% endfor %}
					</p>

				{% endfor %}


			</div>
			<style>
				.example-wrapper {
					margin: 1em auto;
					max-width: 800px;
					width: 95%;
					font: 18px / 1.5 sans-serif;
				}
				.example-wrapper code {
					background: #F5F5F5;
					padding: 2px 6px;
				}
			</style>
		</div>
	</div>
{% endblock %}
