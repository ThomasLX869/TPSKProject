{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ video.source }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ video.url }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ video.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ video.updateDate ? video.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ video.creationDate ? video.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ video.content }}</td>
            </tr>
            <tr>
                <th>NbLike</th>
                <td>{{ video.nbLike }}</td>
            </tr>
            <tr>
                <th>NbDislike</th>
                <td>{{ video.nbDislike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('video_index') }}">back to list</a>

    <a href="{{ path('video_edit', {'id': video.id}) }}">edit</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
