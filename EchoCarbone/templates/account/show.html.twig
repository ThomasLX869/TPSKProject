{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<div class="container bodycontent">
    <h1 class="my-5 text-center">Utilisateur {{ admin.pseudo }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ admin.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ admin.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ admin.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>
                    {% for roles in admin.roles %}
                        <p>{{roles}}</p>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ admin.image }}" alt="avatar de {{ admin.pseudo }}"></td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ admin.pseudo }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ admin.presentation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('account_index') }}">back to list</a>

    <a href="{{ path('account_edit', {'slug': admin.slug}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}

</div>
{% endblock %}






