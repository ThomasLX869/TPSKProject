{# squelette d'une card #}
<div class="offset-md-2 col-12 col-md-10 card-body cardradius my-3" id="list-item-1">
	<div class="cardhead text-center">
		<h3 class="text-center cardtitle">{{article.title|title}}
		</h3>
		<hr class="cardline">
		<p class="cardsorting text-start">Catégories:
			<span
				class="cardlink">
				{# boucle de récupération des catégories #}
				{% for category in article.category %}
					{{ category.label }}
				{% endfor %}
			</span>

			{# boucle de récupération des ages si celles-ci sont différentes du label adulte #}
			{% for ageRange in article.ageRange %}
				{% if ageRange.label != "adulte" %}
					ages:
					<span class="cardlink">{{ageRange.label}}
					</span>
				{% endif %}
			{% endfor %}
		</p>
	</p>
	<p class="cardintro">{{article.description}}</p>
	<img class="imgcard" src="{{article.image}}" alt="Card image"/>
</div>
<div class="cardbody">
	<p class="my-4 cardtext">{{article.content}}</p>
	<div class="my-3 cardfooter">
		{% if article.source != "" %}
			Source:
			<p>{{article.source}}</p>
		{% endif %}
		{% if article.url != "" %}
			Url:
			<p>{{article.url}}</p>
		{% endif %}

		<p class="text-center">écrit le:
			{{article.creationDate|date('d/m/Y à H:i')}}
			- mise à jour le :
			{{article.updateDate|date('d/m/Y à H:i')}}
			par:
			<a href="#" class="cardlink">{{article.author.pseudo}}
			</a>
		</p>

	</div>
</div></div>
