{# squelette d'une card #}
<div class="offset-md-2 col-12 col-md-10 card-body cardradius my-3" id="list-item-1">
	<div class="cardhead text-center">
		<h3 class="text-center cardtitle">{{game.title|title}}
		</h3>
		<hr class="cardline">
		<p class="cardsorting text-start">Catégories:
			<span
				class="cardlink">
				{# boucle de récupération des catégories #}
				{% for category in game.category %}
					{{ category.label }}
				{% endfor %}
			</span>

			{# boucle de récupération des ages si celles-ci sont différentes du label adulte #}
			{% for ageRange in game.ageRange %}
				{% if ageRange.label != "adulte" %}
					ages:
					<span class="cardlink">{{ageRange.label}}
					</span>
				{% endif %}
			{% endfor %}
		</p>
	</p>
			{% if game.description != "" %}

	<p class="cardintro">{{game.description}}</p>

			{% endif %}
			
				{% if game.image != "" %}

			<img class="imgcard" src="{{game.image}}" alt="Card image"/>
			
			{% endif %}
</div>
<div class="cardbody">
	<p class="my-4 cardtext">{{game.content}}</p>
	<div class="my-3 cardfooter">
		{% if game.source != "" %}
			Source:
			<p>{{game.source}}</p>
		{% endif %}
		{{game.url}}
		<script type = "text/javascript" src = "TaPage.js"> </script>


		<p class="text-center">écrit le:
			{{game.creationDate|date('d/m/Y à H:i')}}
			- mise à jour le :
			{{game.updateDate|date('d/m/Y à H:i')}}
			par:
			<a href="#" class="cardlink">{{game.author.pseudo}}
			</a>
		</p>
	</div>
</div></div>


